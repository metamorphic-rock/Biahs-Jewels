@using BiahsJewels.Mvc.Models
@model IEnumerable<Product>

@{
    var product = new Product();
}
<div class="container">
    <div class="title text-md-start">
        <h2 class="position-relative d-inline-block">Products</h2>
    </div>
    <div class="title text-md-end">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createProductModal">
            <i class="fa fa-plus"> Add Product</i>
        </button>
    </div>
</div>

@await Html.PartialAsync("PartialViews/_CreateProductModal", product)

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    Id
                </td>
                <td>
                    Name
                </td>
                <td>
                    Image
                </td>
                <td>
                    Description
                </td>
                <td>
                    Price
                </td>
                <td>
                    Rating
                </td>
                <td>
                    Actions
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var productItem in Model)
            {
                <tr>
                    <td>
                        @productItem.Id
                    </td>
                    <td>
                        @productItem.Name
                    </td>
                    <td>
                        @productItem.ImagePath
                    </td>
                    <td>
                        @productItem.Description
                    </td>
                    <td>
                        @productItem.Price
                    </td>
                    <td>
                        @productItem.Rating
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <button class="btn btn-toolbar">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <a>
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>